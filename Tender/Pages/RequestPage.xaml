<Page x:Class="Tender.Pages.RequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tender.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="730" d:DesignWidth="920"
      Title="RequestPage">

    <StackPanel>
        <ListView x:Name="TenderList" Background="#FFE4E2E3" Width="920" Height="630">
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="ИНН"  DisplayMemberBinding="{Binding Path=Gender}" Width="150"/>
                    <GridViewColumn  Header="Участник"  DisplayMemberBinding="{Binding Path=Surname}" Width="150"/>
                    <GridViewColumn Header="Статус"  DisplayMemberBinding="{Binding Path=Name}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Page>
